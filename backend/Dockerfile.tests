# Functional tests image
FROM golang:1.22-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache git curl

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code (needed for imports)
COPY internal/ ./internal/
COPY tests/ ./tests/

# Set working directory to tests
WORKDIR /app/tests

# Default command runs the tests
CMD ["go", "test", "-v"]
